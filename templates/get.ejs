<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">

    <title>SMS</title>
    <style>
        body {
            background-color: #8f96b0;
            font-family: Arial, Helvetica, sans-serif;
            width: 400px;
            margin: 0 auto;
        }

        .item {
            padding: 10px;
            border: 1px solid #a4a4a4;
            margin: 10px;
            border-radius: 3px;
            background-color: #eee;
            box-shadow: 2px 2px 5px -2px rgba(0, 0, 0, 0.75);
        }

        .message {
            padding-bottom: 10px;
        }

        .meta {
            font-size: 12px;
        }
    </style>
</head>

<body>
    <% for (var i=0; i < messages.length; i++) { %>
        <div class="item">

            <div class="message">
                <%= messages[i].message %>
            </div>

            <div class="meta">
                Received from <%= messages[i].sender %> at <%= messages[i].dateTimeSent %>
            </div>
        </div>
        <% } %>
</body>

</html>